<h2>Add new concert</h2>

<%= form_for @concert_new, url: {action: "create"} do |f| %>
  <%= f.label :artist %>
  <%= f.text_field :artist %>
  <br>
  <%= f.label :venue %>
  <%= f.text_field :venue %>
  <br>
  <%= f.label :city %>
  <%= f.text_field :city %>
  <br>
  <%= f.label :date %>
  <%= f.date_field :date %>
  <br>
  <%= f.label :price %>
  <%= f.text_field :price %>
  <br>
  <%= f.label :description %>
  <%= f.text_area :description, size: "40x2" %>
  <br>

  <%= f.submit "Save" %>
  <%= link_to "Cancel", index_path %>
<% end %>